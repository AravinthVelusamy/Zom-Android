<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    >

    <LinearLayout
        android:id="@+id/inviteOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"


        >
        <org.ironrabbit.type.CustomTypefaceTextView
            android:id="@+id/btnInviteSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_margin="6dp"
            style="@android:style/Widget.Button"

            android:text="@string/invite_sms"
            android:drawableLeft="@android:drawable/ic_menu_send"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            />   <org.ironrabbit.type.CustomTypefaceTextView
        android:id="@+id/btnInviteShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_margin="6dp"
        style="@android:style/Widget.Button"

        android:text="@string/invite_share"
        android:drawableLeft="@android:drawable/ic_menu_share"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"

        />
        <org.ironrabbit.type.CustomTypefaceTextView
            android:id="@+id/btnInviteScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            style="@android:style/Widget.Button"

            android:textSize="10dp"
            android:text="@string/invite_scan_qr"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"

            />

    </LinearLayout>
    <!--
    <Spinner android:id="@+id/choose_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:padding="3dip"
        android:prompt="@string/choose_list_label" />

-->
    <org.ironrabbit.type.CustomTypefaceTextView android:id="@+id/input_contact_label"
        android:layout_marginTop="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_contact_label" />

    <MultiAutoCompleteTextView
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:imeOptions="actionSend"
        android:textColor="@android:color/white"

        />



    
</LinearLayout>
