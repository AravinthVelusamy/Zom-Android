<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/window_background">


        <org.ironrabbit.type.CustomTypefaceTextView
            android:id="@+id/btnOpenGalllery"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:text="@string/photo_gallery"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_photo_library_black_36dp"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />


    <org.ironrabbit.type.CustomTypefaceTextView
        android:id="@+id/btnOpenGroups"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:text="@string/create_group"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_group_black_36dp"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:textAppearance="?android:attr/textAppearanceMedium"

        />


</LinearLayout>